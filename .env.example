# Environment Configuration Example
# Copy this file to .env.local and update values as needed

# GitHub Pages Deployment
# Set to 'true' when building for GitHub Pages deployment
GITHUB_PAGES=false

# Application Name
VITE_APP_NAME=Markdown Editor

# Application Version
VITE_APP_VERSION=0.1.0

# API Configuration (for future use)
# VITE_API_URL=http://localhost:3000

# Analytics (optional)
# VITE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_AUTO_SAVE=true
VITE_AUTO_SAVE_INTERVAL=1000
VITE_ENABLE_LOCAL_STORAGE=true
VITE_MAX_DOCUMENT_SIZE=1048576

# Preview Settings
VITE_PREVIEW_DEBOUNCE_MS=500
VITE_PREVIEW_MAX_HISTORY_SIZE=100
